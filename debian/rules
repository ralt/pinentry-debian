#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- --disable-rpath --without-libcap \
		--enable-pinentry-curses \
		--disable-pinentry-qt --enable-pinentry-qt4 \
		--disable-pinentry-gtk --enable-pinentry-gtk2

override_dh_installdocs:
	dh_installdocs -A NEWS AUTHORS

LDFLAGS += -Wl,--as-needed
